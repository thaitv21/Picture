<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:minHeight="100dp"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvColors"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvLabelOne"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:fontFamily="@font/lato_bold"
            android:text="@string/green"/>

        <com.nullexcom.picture.component.MiddleProgressBar
            android:id="@+id/pbValueOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/tvValueOne"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/default_value_0"
            android:textColor="#000"
            android:fontFamily="@font/lato_bold"
            android:textAlignment="textEnd"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvLabelTwo"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:fontFamily="@font/lato_bold"
            android:text="@string/green"/>

        <com.nullexcom.picture.component.MiddleProgressBar
            android:id="@+id/pbValueTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/tvValueTwo"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/default_value_0"
            android:textColor="#000"
            android:fontFamily="@font/lato_bold"
            android:textAlignment="textEnd"/>

    </LinearLayout>

</LinearLayout>